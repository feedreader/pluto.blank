<html>
  <head>
   <meta charset='utf-8'>
   <meta name='generator' content='<%= Pluto.generator %>'>
   <title><%= site.title %></title>

   <%= stylesheet_link_tag 'blank.two' %>
  </head>
  <body>
    
<h1>
  <%= site.title %>
  <span class='smaller'>
  Last Update:
   <% if site.fetched %>
    <%= site.fetched.strftime('%A, %d. %B %Y %H:%M') %>
   <% end %>
  </span>
</h1>


<!-- use a table w/ two colums -->


<table>
  <colgroup>
    <col width='50%'>
    <col width='50%'>
  </colgroup>
<tr>

<%  site.items.latest.limit(24).in_columns(2).each do |items| %>

<td valign='top'>
  <!-- start new column -->

  <% items.each do |item| %>


<div class='item'>

<h4>
  <%= link_to item.feed.title, item.feed.url %>
  <span class='item-published'>
     - 
      <!-- fix/todo: show year if not current year
           e.g. use "%b %d, '%y"
         -->
     <%= item.published.strftime("%b %d") %>
  </span>
</h4>

<h3>
  <span class='item-title'>
    <%= link_to item.title, item.url %>
   </span>
</h3>
 
<div class='item-summary'>
  <% if item.summary %>
     <%= textify( item.summary ) %>
  <% else %>
     -/-
  <% end %>
 <span class='item-time-ago-in-words'>
 <%= time_ago_in_words( item.published ) %>
 </span>  
</div><!-- item-summary -->
</div><!-- item -->


  <% end %><!-- each item (inside column) -->
 </td>

<% end %><!-- each column-->
  </tr>
</table>

</body>
</html>
